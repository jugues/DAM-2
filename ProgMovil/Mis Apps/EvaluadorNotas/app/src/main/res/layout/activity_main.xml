<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Estatus del alumno"
         />

    <EditText
        android:id="@+id/etFisica"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nota de física"/>

    <EditText
        android:id="@+id/etQuimica"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nota de química"/>

    <EditText
        android:id="@+id/etMates"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nota de matemáticas"/>

    <Button
        android:id="@+id/btnCalcular"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Calcular estatus"/>

</LinearLayout>